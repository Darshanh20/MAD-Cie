# Auto detect text files and normalize line endings to LF
* text=auto

# Dart
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# JSON
*.json text eol=lf
*.jsonc text eol=lf

# Markdown
*.md text eol=lf
*.markdown text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf
*.exe binary
*.msi binary

# Git
.gitignore text eol=lf
.gitattributes text eol=lf
.gitkeep text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf
README* text eol=lf
CHANGELOG* text eol=lf
LICENSE* text eol=lf
AUTHORS* text eol=lf

# SQL
*.sql text eol=lf

# XML
*.xml text eol=lf
*.gradle text eol=lf

# Properties
*.properties text eol=lf
*.env* text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.otf binary
*.db binary

# Archives
*.tar binary
*.tgz binary
*.rar binary
*.7z binary
*.tar.gz binary

# Certificates
*.pem binary
*.key binary
*.crt binary
*.p8 binary
*.p12 binary
*.pfx binary
